---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import TopImage from "/top.png";
---

<Layout title="美容室サクセス">
	<main>
		<h1><span class="text-gradient">美容室サクセス</span></h1>
		<img src={TopImage} alt="" width="600" />

		<br />
		<br />
		<ul role="list" class="link-card-grid">
			<Card
				href="https://kashimashi-success.jimdofree.com/%E9%85%B8%E6%80%A7%E3%82%B9%E3%83%88%E3%83%AC%E3%83%BC%E3%83%88/"
				title="酸性ストレート"
				body="何をしても、パサついて、艶のない髪を解決できる。\nワンランク上のストレートを、用意しております。"
			/>
			<Card
				href="https://kashimashi-success.jimdofree.com/%E3%83%98%E3%83%83%E3%83%89%E3%82%B9%E3%83%91/"
				title="ヘッドスパ"
				body="ほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃ"
			/>
			<Card
				href="https://kashimashi-success.jimdofree.com/%E3%81%BE%E3%81%A4%E6%AF%9B%E3%82%AB%E3%83%BC%E3%83%AB/"
				title="まつ毛カール"
				body="ほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃ"
			/>
			<Card
				href="https://kashimashi-success.jimdofree.com/%E7%9D%80%E4%BB%98%E3%81%91-%E6%88%90%E4%BA%BA%E5%BC%8F/"
				title="着付け・成人式"
				body="ほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃ"
			/>
			<Card
				href="https://kashimashi-success.jimdofree.com/menu-price/"
				title="メニュー・値段"
				body="ほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃほにゃ"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 100ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(33ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
